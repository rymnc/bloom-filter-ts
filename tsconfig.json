{
    "compilerOptions": {
      "target": "es2018",
      "module": "commonjs",
      "moduleResolution": "node",
      "declaration": true,
      "pretty": true,
      "noEmitOnError": true,
      "esModuleInterop": true,
      "strict": true,
      "resolveJsonModule": true,
      "removeComments": true,
      "newLine": "lf",
      "noUnusedLocals": true,
      "noFallthroughCasesInSwitch": true,
      "useDefineForClassFields": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "lib": [
        "esnext"
      ],
      "outDir": "dist",      
    },
    "typedocOptions": {
        "entryPoints": ["./lib/sdk.ts", "./lib/utils.ts", "./lib/types.ts"],
        "out": "docs"
    },
    "include": [
        "lib/*.ts"
    ],
  }